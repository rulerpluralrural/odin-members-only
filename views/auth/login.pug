doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		script(
			src="https://kit.fontawesome.com/91f7703251.js",
			crossorigin="anonymous"
		)
		link(rel="stylesheet", href="/stylesheets/style.css")
		title= title
	body
		.auth-container
			.auth-header
				a.logo(href="/only-fams") 
					i.fa-solid.fa-people-group
					h1 ONLY FAMS

			if (messages)
				.errors-container
					ul
						each message in messages
							li!= message

			form#auth-form(action="", method="POST") 
				h1 #{ title }
				.form-group
					label(for="username") Username:
					input#username.form-control(
						type="text",
						name="username",
						required="true",
						placeholder="Enter your username"
					)
				.form-group
					label(for="password") Password:
					input#password.form-control(
						type="password",
						name="password",
						required="true",
						placeholder="Enter your password"
					)
				button.form-control(type="submit") Submit
				p Don't have an account yet?
					|
					a(href="/only-fams/sign-up") Sign-up
				p.text-success #{ success_msg }
